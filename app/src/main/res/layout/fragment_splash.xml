<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimaryLight"
  tools:context=".ui.startup.splash.SplashFragment">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:id="@+id/logoSplashScreen"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="4dp"
      android:src="@drawable/ic_logo_dark_background"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/tvSplashScreenTitle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:contentDescription= "App Logo" />

    <TextView
      android:id="@+id/tvSplashScreenTitle1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="venue"
      android:textAlignment="center"
      android:textAppearance="@style/TitleTextTheme"
      app:layout_constraintEnd_toEndOf="@+id/tvSplashScreenTitle2"
      app:layout_constraintStart_toStartOf="@+id/tvSplashScreenTitle2"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tvSplashScreenTitle2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="4dp"
      android:text="booker"
      android:textAppearance="@style/TitleTextThemeWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/logoSplashScreen" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>