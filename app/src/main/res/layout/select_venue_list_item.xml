<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/selectVenueListItemNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="Name:"
            android:textColor="#0B0C24"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/selectVenueListItemName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#A3AFC5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/selectVenueListItemNameLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectVenueListItemNameLabel"
            app:layout_constraintTop_toTopOf="@+id/selectVenueListItemNameLabel" />

        <TextView
            android:id="@+id/selectVenueListItemBuildingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Building:"
            android:textColor="#0B0C24"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectVenueListItemNameLabel" />

        <TextView
            android:id="@+id/selectVenueListItemBuilding"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#A3AFC5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/selectVenueListItemBuildingLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectVenueListItemBuildingLabel"
            app:layout_constraintTop_toTopOf="@+id/selectVenueListItemBuildingLabel" />

        <TextView
            android:id="@+id/selectVenueListItemVenueTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="VenueType:"
            android:textColor="#0B0C24"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectVenueListItemBuildingLabel" />

        <TextView
            android:id="@+id/selectVenueListItemVenueType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#A3AFC5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/selectVenueListItemVenueTypeLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectVenueListItemVenueTypeLabel"
            app:layout_constraintTop_toTopOf="@+id/selectVenueListItemVenueTypeLabel" />

        <TextView
            android:id="@+id/selectVenueListItemCapacityLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Capacity:"
            android:textColor="#0B0C24"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selectVenueListItemVenueTypeLabel" />

        <TextView
            android:id="@+id/selectVenueListItemCapacity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="#A3AFC5"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/selectVenueListItemCapacityLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/selectVenueListItemCapacityLabel"
            app:layout_constraintTop_toTopOf="@+id/selectVenueListItemCapacityLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>