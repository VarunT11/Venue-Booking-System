<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.VenueBookingSystem" parent="Theme.Material3.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
    <item name="colorOnPrimary">@color/colorWhite</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="background">@color/colorBackgroundLight</item>
  </style>

  <style name="BottomNavigationActiveItemStyle" parent="Theme.VenueBookingSystem">
    <item name="fontFamily">@font/montserrat_semibold</item>
  </style>

  <style name="BottomNavigationInactiveItemStyle" parent="Theme.VenueBookingSystem">
    <item name="fontFamily">@font/montserrat_semibold</item>
  </style>
  
  <style name="roundedImageView">
    <item name="cornerFamily">rounded</item>
  </style>

  <style name="HeadingTextTheme">
    <item name="android:fontFamily">@font/poppins_semibold</item>
    <item name="android:textSize">36sp</item>
    <item name="android:textColor">@color/colorAccent</item>
  </style>

  <style name="TitleTextTheme">
    <item name="android:fontFamily">@font/poppins_bold</item>
    <item name="android:textSize">34sp</item>
    <item name="android:textColor">@color/colorAccent</item>
  </style>

  <style name="TitleTextThemeWhite" parent="TitleTextTheme">
    <item name="android:textColor">@color/colorWhite</item>
  </style>

  <style name="FilledButtonTheme" parent="ThemeOverlay.Material3.Button">
    <item name="android:background">@drawable/background_button_filled</item>
    <item name="backgroundTint">@color/colorAccent</item>
    <item name="android:textAppearance">@style/FilledButtonTextAppearance</item>
    <item name="iconTint">@null</item>
  </style>

  <style name="FilledButtonTextAppearance" parent="FilledButtonTheme">
    <item name="fontFamily">@font/poppins_medium</item>
    <item name="android:textColor">@color/colorWhite</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="TextInputStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
    <item name="android:textColorHint">#A3AFC7</item>
    <item name="boxStrokeWidth">0.5dp</item>
    <item name="boxStrokeColor">#E8E7EA</item>
    <item name="hintAnimationEnabled">true</item>
    <item name="hintEnabled">true</item>
    <item name="hintTextAppearance">@style/HintTextAppearance</item>
  </style>

  <style name="TextInputTextStyle" parent="TextInputStyle">
    <item name="android:background">@android:color/transparent</item>
    <item name="android:textColor">#0B0C24</item>
    <item name="fontFamily">@font/poppins_regular</item>
    <item name="android:paddingStart">0dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingTop">36dp</item>
    <item name="android:paddingBottom">4dp</item>
  </style>

  <style name="HintTextAppearance" parent="Theme.VenueBookingSystem">
    <item name="fontFamily">@font/poppins_regular</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">#A3AFC7</item>
  </style>
  
  <style name="CardTheme" parent="Widget.Material3.CardView.Outlined">
    <item name="cardBackgroundColor">#FFFFFF</item>
    <item name="cardCornerRadius">16dp</item>
    <item name="contentPadding">16dp</item>
    <item name="strokeWidth">0dp</item>
  </style>
  
</resources>
